
<div class="row center-xs">
  <div class="col-xs-8 col-md-8  col-md-offset-2">
<h1>Lista de Generos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nombre %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 
<%= link_to 'Nuevo Genero', new_category_path, class:"waves-effect waves-light btn", style:"background-color:#2196F3;" %>
</div>
</div>